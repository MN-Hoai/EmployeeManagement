<div class="modal fade" id="jobPositionCreateUpdate" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <!-- Header -->
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title">Thêm / Sửa Vị trí công tác</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>

            <!-- Body -->
            <div class="modal-body">
                <form id="jobPositionForm">
                    <input type="hidden" id="jobPositionId" />

                    <h6 class="fw-bold text-uppercase text-primary mb-3">1. Thông tin cơ bản</h6>
                    <div class="row">
                        <div class="col-lg-6 mb-3">
                            <label class="form-label">Mã vị trí <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="jobCode" placeholder="Nhập mã vị trí">
                        </div>

                        <div class="col-lg-6 mb-3">
                            <label class="form-label">Tên vị trí <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="jobName" placeholder="Nhập tên vị trí công tác">
                        </div>

                        <div class="col-lg-6 mb-3">
                            <label class="form-label">Từ khóa</label>
                            <input type="text" class="form-control" id="jobKeyword" placeholder="Nhập từ khóa tìm kiếm">
                        </div>

                        <div class="col-lg-6 mb-3">
                            <label class="form-label">Địa chỉ làm việc</label>
                            <input type="text" class="form-control" id="jobAddress" placeholder="Nhập địa chỉ">
                        </div>

                        <div class="col-lg-6 mb-3">
                            <label class="form-label">Trạng thái</label>
                            <select class="form-select" id="jobStatus">
                                <option value="1">Kích hoạt</option>
                                <option value="0">Tạm khóa</option>
                            </select>
                        </div>
                    </div>

                    <hr class="my-3" />

                    <h6 class="fw-bold text-uppercase text-primary mb-3">2. Thông tin hệ thống</h6>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Người tạo</label>
                            <input type="text" class="form-control" id="createdBy" readonly>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Ngày tạo</label>
                            <input type="text" class="form-control" id="createdDate" readonly>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Người chỉnh sửa</label>
                            <input type="text" class="form-control" id="updatedBy" readonly>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Ngày chỉnh sửa</label>
                            <input type="text" class="form-control" id="updatedDate" readonly>
                        </div>
                    </div>
                </form>
            </div>

            <!-- Footer -->
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="ri-close-line me-1"></i> Đóng
                </button>
                <button type="button" class="btn btn-primary" id="btnSaveJobPosition">
                    <i class="ri-save-3-line me-1"></i> Lưu vị trí công tác
                </button>
            </div>
        </div>
    </div>
</div>
